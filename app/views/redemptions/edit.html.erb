<div class="row">
  <div name="patron_name" class="col-md-6 offset-md-3 col-xs-6 offset-xs-3">
    <%= @redemption.patron.full_name %>!
  </div>
</div>

<div class="row">
  <div name="reward_description" class="col-md-6 offset-md-3 col-xs-6 offset-xs-3">
    Claim your <%= @redemption.store.loyalty_card_terms.last.reward_description %>
  </div>
</div>

<div class="row">
  <div name="store_name" class="col-md-6 offset-md-4 col-xs-6 offset-xs-3">
    from <%= @redemption.store.name %>
  </div>
</div>

<div class="row">
  <%= form_for @redemption, url: redemption_path do |f| %>
    <%= f.hidden_field :id %>
    <%= f.submit 'Claim', class: "col-md-3 offset-md-4 col-xs-3 offset-xs-4" %>
  <% end %>
</div>
