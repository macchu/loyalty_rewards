<%= bootstrap_form_for(@terms, layout: :horizontal, label_col: "col-md-3 offset-md-1 col-xs-3 offset-xs-1", control_col: "col-md-6 col-xs-6") do |f| %>
  <%= f.hidden_field :id %>
  <%= f.text_field :reward_description %>
  <%= f.number_field :stamps_required %>  
  <%= f.select(:check_in_strategy_id, CheckInStrategy.all.collect { |c| [ c.name, c.id ] }) %>
  <%= f.form_group( class: 'offset-md-4') do %>
    <%= f.primary "Save Card", class: "btn btn-success" %>
  <% end %>
<% end %>