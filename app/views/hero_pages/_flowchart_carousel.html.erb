<div id="carouselExampleIndicators" class="carousel slide" data-interval="false" >

  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= render partial: 'flowchart_v2', 
      locals: { step_number: 'Step 1',
                title: 'Make a sale',
                explanation: 'Other businesses, such as car shops and dry cleaners, are also appropriate examples.',
                image: 'step_1.png'} %>
    </div>
    <div class="carousel-item">
      <%= render partial: 'flowchart_v2', 
      locals: { step_number: 'Step 2',
                title: 'Generate a receipt',
                explanation: 'A unique code on the receipt is useful for verifying a purchase, but not essential.',
                image: 'step_2.png'} %>
    </div>
    <div class="carousel-item">
      <%= render partial: 'flowchart_v2', 
      locals: { step_number: 'Step 3',
                title: 'Request Stamp',
                explanation: 'Customer now texts a proof of purchase to Freebee.',
                image: 'step_3.png'} %>
    </div>
    <div class="carousel-item">
      <%= render partial: 'flowchart_v2', 
      locals: { step_number: 'Step 4',
                title: 'Request Stamp',
                explanation: 'Customer now texts a proof of purchase to Freebee.',
                image: 'step_3b.png'} %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon carousel-control-icon-prev-dark" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon carousel-control-icon-next-dark" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>