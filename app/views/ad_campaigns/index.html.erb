<h2>Ad Campaigns</h2>
<table class="table">
  <thead>
    <tr>
      <th>Platform</th>
      <th>Description</th>
      <th>Size</th>
      <th>Start</th>
      <th>Duration</th>
      <th>Success</th>
      <th>Uncorrelated</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @store.ad_campaigns.each_with_index do | campaign, i | %>
    <tr>
      <td><%= link_to(campaign.platform.name, store_ad_campaign_path(campaign.store_id, campaign.id)) %></td>
      <td><%= campaign.display_description %></td>
      <td> 20,153 </td>
      <td>2 days ago</td>
      <td>14 days</td>
      <td> 8% </td>
      <td> 75% </td>
      <td> $14,500 </td>
      <td> <%= link_to  fa_icon("trash-o"),  
              { action: "destroy", store_id: campaign.store_id, id: campaign.id},
              method: :delete, 
              data: { confirm: "Are you sure?" },
              class: 'btn btn-danger trash-o icon-button' %> 
      </td>              
</div>
    </tr>
  <% end %>
  </tbody>
</table>